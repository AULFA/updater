<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_height="128dp"
  android:layout_width="match_parent">

  <ImageView
    android:id="@+id/repositoryIcon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/repository" />

  <TextView
    android:id="@+id/repositoryName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="Placeholder"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/repositoryIcon"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/repositoryURI"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:ellipsize="end"
    android:fontFamily="monospace"
    android:maxLines="1"
    android:text="A very very very long placeholder that should never be visible"
    android:textSize="10sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/repositoryIcon"
    app:layout_constraintTop_toBottomOf="@id/repositoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>