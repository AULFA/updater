<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/installing"
  android:layout_width="match_parent"
  android:layout_height="@dimen/inventory_item_height">

  <ImageView
    android:id="@+id/installingIcon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/downloading" />

  <TextView
    android:id="@+id/installingPackageName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="Placeholder"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/installingIcon"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/installingPackageButton"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="@string/package_cancel"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <ProgressBar
    android:id="@+id/installingProgressMajor"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:indeterminate="true"
    app:layout_constraintEnd_toStartOf="@id/installingPackageButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/installingIcon" />

  <ProgressBar
    android:id="@+id/installingProgressMinor"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:indeterminate="true"
    app:layout_constraintEnd_toStartOf="@id/installingPackageButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/installingProgressMajor" />

  <TextView
    android:id="@+id/installingProgressState"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:ellipsize="end"
    android:fontFamily="monospace"
    android:maxLines="1"
    android:text="A very long placeholder string for progress state"
    android:textSize="10sp"
    app:layout_constraintBottom_toTopOf="@+id/installingPackageButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/installingIcon"
    app:layout_constraintTop_toBottomOf="@+id/installingPackageName" />

  <View
    android:id="@+id/divider2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>